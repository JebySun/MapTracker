<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/gray_little"
    android:orientation="horizontal" >
    
    
    <LinearLayout android:id="@+id/rellayout_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray_dark">
		<TextView android:id="@+id/tv_year"
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="24"
		   	android:textColor="@color/gray_txt"
		    android:gravity="center_vertical"
		    android:textSize="18sp"/>        
		<TextView
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="16"
		    android:gravity="center_vertical"
		    android:text="年"
		    android:textColor="@color/gray_txt"
		    android:textSize="12sp"/>        
		<TextView android:id="@+id/tv_month"
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="24"
		    android:gravity="center_vertical"
		    android:textColor="@color/gray_txt"
		    android:textSize="18sp"/>        
		<TextView
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="16"
		    android:gravity="center_vertical"
		    android:text="月"
		    android:textColor="@color/gray_txt"
		    android:textSize="12sp"/>        
		<TextView android:id="@+id/tv_week"
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="24"
		    android:gravity="center_vertical"
		    android:textColor="@color/gray_txt"
		    android:textSize="16sp"/>        
        
    </LinearLayout>
    
    <LinearLayout android:id="@+id/linlayout_content"
        android:layout_width="wrap_content"
        android:layout_weight="100"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView android:id="@+id/title"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="50"
	    	android:textSize="18sp"
	    	android:textColor="@color/black"
	    	android:gravity="left"/>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:orientation="vertical">
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView android:id="@+id/tv_timetake_title"
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:text="历时："
			    	android:textSize="16sp"
			    	android:textColor="#FF666666"
			    	android:gravity="left"
		        />
	           	<TextView android:id="@+id/tv_timetake"
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_toRightOf="@id/tv_timetake_title"
			    	android:textSize="16sp"
			    	android:textColor="#FF666666"
			    	android:gravity="left"
		        />
            </RelativeLayout>
            
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">
	           	<TextView android:id="@+id/tv_speed_title"
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:text="平均速度："
			    	android:textSize="16sp"
			    	android:textColor="#FF666666"
			    	android:gravity="left"
		        />
	           	<TextView android:id="@+id/tv_speed"
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_toRightOf="@id/tv_speed_title"
			    	android:textSize="16sp"
			    	android:textColor="#FF666666"
			    	android:gravity="left"
		        />
           	</RelativeLayout>
        </LinearLayout>
        
        <TextView android:id="@+id/tv_time"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="20"
	    	android:textSize="14sp"
	    	android:textColor="@color/gray_txt"
	    	android:gravity="left|center_vertical"/>

    </LinearLayout>
    
    <TextView android:id="@+id/tv_mileage"
        android:layout_width="wrap_content"
	   	android:layout_height="match_parent"
	   	android:textSize="20sp"
	   	android:textColor="@color/orange"
	   	android:gravity="center"/>
    
    
</LinearLayout>
