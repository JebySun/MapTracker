<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp" 
    android:background="@color/gray_little">
    
    <TextView android:id="@+id/tv_index"
        android:layout_width="48dp"
    	android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/gray_dark"
    	android:textSize="16sp"
    	android:textColor="#FF000000"
    	android:gravity="center" />
    
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/tv_index">
	    <TextView android:id="@+id/tv_address"
	        android:layout_width="match_parent"
	    	android:layout_height="28dp"
	    	android:textSize="16sp"
	    	android:textColor="#FF666666"
	    	android:gravity="left"/>
	    <TextView android:id="@+id/tv_timestap"
	        android:layout_below="@id/tv_address"
	        android:layout_width="wrap_content"
	    	android:layout_height="20dp"
	    	android:textSize="14sp"
	    	android:textColor="#FF666666"
	    	android:gravity="left"/>
	    <TextView android:id="@+id/tv_accuracy"
	        android:layout_below="@id/tv_address"
	        android:layout_toRightOf="@id/tv_timestap"
	        android:layout_width="match_parent"
	    	android:layout_height="20dp"
	    	android:textSize="14sp"
	    	android:textColor="#FF666666"
	    	android:gravity="right"/>
    </RelativeLayout>

</RelativeLayout>
